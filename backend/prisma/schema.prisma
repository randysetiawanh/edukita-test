generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          String       @id @default(uuid())
  name        String
  email       String       @unique
  role        UserRoles
  assignments Assignment[]
  createdAt   DateTime     @default(now())
}

model Assignment {
  id        String   @id @default(uuid())
  subject   Subject
  title     String
  content   String
  student   Users    @relation(fields: [studentId], references: [id])
  studentId String
  createdAt DateTime @default(now())
}

enum UserRoles {
  student
  teacher
}

enum Subject {
  ENGLISH
  MATH
}
